<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screen_2"
    android:orientation="vertical"
    android:background="#f2f2f0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_next"
            android:padding="10dp"
            android:rotation="180"
            android:tint="#3D3D3D"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Kvittering"
            android:textColor="#000"
            android:fontFamily="@font/abeezee"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="7"
            android:textSize="16sp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:padding="12dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_upload"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:id="@+id/top_layout"
        android:paddingRight="40dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@drawable/round_shape"
                android:backgroundTint="#847e8d">

            </LinearLayout>
            <LinearLayout
                android:id="@+id/main_ticket"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_ticket_2"
                android:layout_height="430dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="Du har betalt"
                    android:fontFamily="@font/abeezee"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center|bottom"
                    android:textColor="#88FFFFFF"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/abeezee"
                    android:layout_weight="1"
                    android:id="@+id/amount"
                    android:text="100 kr"
                    android:textSize="30sp"
                    android:gravity="center|top"
                    android:textColor="#F8FAF6"
                    />
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:padding="2dp"
                    android:src="@drawable/ic_business"
                    android:id="@+id/profile_image"
                    android:outlineSpotShadowColor="#000"
                    android:background="@drawable/round_shape"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lotte Bach Larsen"
                        android:textColor="#000"
                        android:id="@+id/name"
                        android:fontFamily="@font/abeezee"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+45 53 85 65"
                        android:fontFamily="@font/abeezee"
                        android:id="@+id/phone"
                        android:textColor="#4B000000"
                        android:textSize="12sp"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center|bottom"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_calendar"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|bottom"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/abeezee"
                        android:textColor="#000"
                        android:id="@+id/currentDate"
                        android:text="20.5.2019"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_clock"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|bottom"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:fontFamily="@font/abeezee"
                        android:id="@+id/currentTime"
                        android:text="20:45"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Transaktionsoplysninger"
                    android:gravity="center"
                    android:fontFamily="@font/abeezee"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#5E78C4"/>

            </LinearLayout>



        </RelativeLayout>

    </LinearLayout>



</LinearLayout>